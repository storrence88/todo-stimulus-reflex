<h1><%= @task.name %></h1>

<% if @task.assignee %>
  <p class='text-muted'>Assigned to: <%= @task.assignee_name %></p>
<% end %>

<% if @task.complete? %>
  <p class='text-muted'>Completed by: <%= @task.completer_name %></p>
<% end %>

<%= link_to 'Back to lists', root_path %>

<hr>

<h4 class='mb-4'>Comments</h4>
<div id="comments">
  <%= render @task.comments %>
</div>

<div class="card mb-4">
  <div class="card-header">New Comment</div>
  <div class="card-body">
    <%= bootstrap_form_with model: @new_comment, url: list_task_comments_path(@task.list, @task), local: false do |f| %>
      <%= f.text_area :body, skip_label: true %>
      <%= f.primary %>
    <% end %>
  </div>
</div>