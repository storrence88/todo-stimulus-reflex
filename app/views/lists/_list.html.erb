<div class="row justify-content-center my-3" data-controller='list' data-list-id='<%= list.id %>' id='<%= dom_id(list) %>' data-reflex-root='#<%= dom_id(list) %>'>
  <div class="col">
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <%= list.name %>
        <%= link_to 'Delete', list_path(list), method: :delete, class: 'text-danger', remote: true, data: { confirm: 'Are you sure?' } %>
      </div>
      <div class="card-body p-0">
          <% if list.tasks.any? %>
            <div class="list-group list-group-flush" id='incomplete-tasks' data-list-target='tasks'>
              <%= render list.tasks.incomplete %>
            </div>
            <div class="list-group list-group-flush border-top" id='complete-tasks'>
              <%= render list.tasks.complete %>
            </div>
          <% else %>
            <h5 class="p-4 mb-0">No tasks yet!</h5>
          <% end %>
        </div>
      </div>
      <div class="card-footer">
        <%= bootstrap_form_with model: @new_task, id: "task-form-for-list-#{list.id}", url: '', layout: :inline, data: { reflex: 'submit->ListReflex#create_task', list_id: list.id, list_target: 'form' } do |f| %>
          <%= f.text_field :name, skip_label: true, wrapper_class: 'flex-fill mr-2', class: 'w-100', placeholder: 'What needs to be done?' %>
          <%= f.submit 'Add Task' %>
        <% end %>
      </div>
    </div>
  </div>
</div>